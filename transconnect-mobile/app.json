{
  "expo": {
    "name": "TransConnect",
    "slug": "transconnect-mobile",
    "version": "1.0.2",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/images/logo.png",
    "scheme": "transconnect",
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E40AF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.transconnect.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for ticket verification",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show nearby bus stops and routes",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload profile pictures"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#1E40AF"
      },
      "package": "com.transconnect.mobile",
      "versionCode": 6,
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "notification": {
      "icon": "./assets/images/logo.png",
      "color": "#1E40AF",
      "androidMode": "default",
      "androidCollapsedTitle": "#{unread_notifications} new notifications"
    },
    "web": {},
    "plugins": [
      "expo-camera",
      "expo-notifications",
      "expo-location",
      "expo-secure-store"
    ],
    "extra": {
      "apiUrl": "https://transconnect-app-44ie.onrender.com/api",
      "eas": {
        "projectId": "099ff83f-eabe-4c37-a390-86a6a436201f"
      }
    },
    "owner": "jilord2"
  }
}
