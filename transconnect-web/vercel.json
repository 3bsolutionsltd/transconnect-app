{
  "version": 2,
  "name": "transconnect-web",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://transconnect-app-44ie.onrender.com/api/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://transconnect-app-44ie.onrender.com",
    "NEXT_PUBLIC_ENVIRONMENT": "production"
  },
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}