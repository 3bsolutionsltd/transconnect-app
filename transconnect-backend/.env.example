# TransConnect MVP1 - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env files with real credentials to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@hostname:port/database_name"

# =============================================================================
# JWT SECURITY
# =============================================================================
# Generate a strong random secret: openssl rand -hex 64
JWT_SECRET="your-super-secure-random-jwt-secret-at-least-32-characters-long"
JWT_EXPIRES_IN="24h"

# =============================================================================
# SERVER CONFIGURATION  
# =============================================================================
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
CALLBACK_HOST=your-domain.com

# MTN Mobile Money Configuration
MTN_BASE_URL=https://sandbox.momodeveloper.mtn.com
MTN_SUBSCRIPTION_KEY=your-mtn-subscription-key
MTN_USER_ID=your-mtn-user-id
MTN_API_KEY=your-mtn-api-key
MTN_WEBHOOK_SECRET=your-mtn-webhook-secret

# Airtel Money Configuration
AIRTEL_BASE_URL=https://openapiuat.airtel.africa
AIRTEL_CLIENT_ID=your-airtel-client-id
AIRTEL_CLIENT_SECRET=your-airtel-client-secret
AIRTEL_WEBHOOK_SECRET=your-airtel-webhook-secret

# Flutterwave Configuration
FLUTTERWAVE_BASE_URL=https://api.flutterwave.com/v3
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-X
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-X
FLUTTERWAVE_WEBHOOK_SECRET=your-flutterwave-webhook-secret

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email Configuration (Titan Email)
EMAIL_HOST=smtp.titan.email
EMAIL_PORT=587
EMAIL_USER=your-email@yourdomain.com
EMAIL_PASS=your-email-password

# SMTP Configuration (Alternative)
SMTP_HOST=smtp.titan.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user@yourdomain.com
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@transconnect.ug

# Firebase Configuration (for FCM)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Security
PAYMENT_ENCRYPTION_KEY=your-32-character-encryption-key
WEBHOOK_RETRY_ATTEMPTS=3
PAYMENT_TIMEOUT_MINUTES=10