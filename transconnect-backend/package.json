{
  "name": "transconnect-backend",
  "version": "1.0.0",
  "description": "TransConnect MVP1 Backend API - Bus Ticketing and Ride Connector",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc --project tsconfig.prod.json",
    "build:dev": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:deploy": "prisma db push",
    "deploy:db": "node deploy-db.js",
    "db:setup:production": "node scripts/setup-production-db.js",
    "db:test-connection": "ts-node scripts/test-db-connection.ts",
    "db:backup": "node scripts/backup.js",
    "db:optimize": "ts-node scripts/optimize-db.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:production": "ts-node scripts/test-production-setup.ts",
    "test:production-quick": "npm run test && npm run db:test-connection",
    "production:setup": "chmod +x scripts/deploy-production.sh && ./scripts/deploy-production.sh",
    "production:health": "curl -f http://localhost:${PORT:-5000}/health || exit 1",
    "production:backup": "./scripts/backup.sh",
    "production:monitor": "./scripts/monitor.sh",
    "logs:view": "tail -f logs/app.log",
    "logs:errors": "grep -i error logs/app.log | tail -20"
  },
  "prisma": {
    "seed": "node scripts/seed-production.js"
  },
  "keywords": [
    "transconnect",
    "bus-ticketing",
    "ride-connector",
    "api"
  ],
  "author": "3B Solutions Ltd & Green Rokon Technologies Ltd",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@types/uuid": "^10.0.0",
    "archiver": "^7.0.1",
    "axios": "^1.13.0",
    "bcryptjs": "^3.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "qrcode": "^1.5.4",
    "redis": "^4.7.1",
    "socket.io": "^4.7.4",
    "twilio": "^4.19.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.9",
    "@types/nodemailer": "^6.4.21",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.6.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
