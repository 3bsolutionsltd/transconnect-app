# Production environment variables
# Copy this file to .env and fill in your production values

# Database
POSTGRES_PASSWORD=your-super-secure-db-password
DATABASE_URL=postgresql://transconnect:your-super-secure-db-password@postgres:5432/transconnect

# JWT & Security
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-chars
BCRYPT_ROUNDS=12

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Firebase Push Notifications
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# CORS Origins (comma-separated)
CORS_ORIGIN=https://admin.yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# Admin Interface
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_APP_NAME=TransConnect Admin