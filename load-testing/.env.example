# Environment Configuration for Load Testing

# API Base URLs
API_BASE_URL=http://localhost:5000/api
WEB_BASE_URL=http://localhost:3002
ADMIN_BASE_URL=http://localhost:3001

# Database Connection (for direct DB testing)
DATABASE_URL=postgresql://username:password@localhost:5432/transconnect_test

# Test Configuration
TEST_DURATION_SECONDS=120
MAX_VIRTUAL_USERS=100
RAMP_UP_DURATION=30

# Load Testing Targets
LIGHT_LOAD_USERS=25
MODERATE_LOAD_USERS=100
HEAVY_LOAD_USERS=500

# Test Data
TEST_AGENT_EMAIL=test.agent@transconnect.test
TEST_AGENT_PASSWORD=TestPassword123!
TEST_PHONE_NUMBER=+256700000000

# Performance Thresholds
MAX_RESPONSE_TIME_MS=2000
MAX_ERROR_RATE_PERCENT=5
MIN_THROUGHPUT_RPS=10

# Reporting
REPORT_OUTPUT_DIR=./reports
GENERATE_HTML_REPORT=true
SEND_SLACK_NOTIFICATIONS=false